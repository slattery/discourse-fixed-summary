{{#if siteSettings.fixed_digest_enabled}}
    <label class="control-label">Fixed Digest</label>
    {{preference-checkbox labelKey="user.fixed_digest_emails.title" checked=model.custom_fields.fixed_digest_emails}}
    <div class="controls fixed_digest_deliveries">
      <label>{{i18n 'user.fixed_digest_deliveries.title'}}</label>    
      {{hour-setting  choices="0800|0900|1000|1100|1200|1300|1400|1500|1600|1700|1800" settingName="fixed_digest_deliveries" settingValue=model.custom_fields.fixed_digest_deliveries}}
    </div>
    <div class="instructions">{{i18n 'user.fixed_digest_deliveries.instructions'}}</div>
{{/if}}